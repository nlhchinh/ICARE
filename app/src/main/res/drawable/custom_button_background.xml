<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A000000" /> <!-- Shadow color, slightly transparent black -->
            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- Main Button Shape Layer -->
    <item android:bottom="4dp" android:right="2dp" android:left="2dp"> <!-- Offset to create shadow effect -->
        <shape android:shape="rectangle">
            <solid android:color="@color/custom_button_backround_color_1" /> <!-- Button background color -->
            <corners android:radius="30dp" />
            <stroke android:width="1dp" android:color="#F4DFFD" /> <!-- Optional: light grey border -->
        </shape>
    </item>
</layer-list>
