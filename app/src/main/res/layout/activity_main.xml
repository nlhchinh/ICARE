<?xml version="1.0" encoding="utf-8"?><!-- Sử dụng FrameLayout làm layout gốc để xếp chồng các lớp lên nhau -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".logic.activity.MainActivity">

    <!-- Lớp 1: ConstraintLayout chứa tất cả các animation chính -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Vòng tròn lan ra -->
        <View
            android:id="@+id/reveal_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B3FFD1DC"
            android:visibility="invisible" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/app_logo"
            android:src="@drawable/ic_logo_icare"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Tên app -->
        <com.example.icare.ui.StrokeTextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-8dp"
            android:alpha="0.7"
            android:fontFamily="@font/fredoka_one"
            android:shadowColor="#742521"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="8"
            android:text="@string/app_name"
            android:textColor="#B3FFD1DC"
            android:textSize="40sp"
            android:translationX="-90dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/logo"
            app:layout_constraintStart_toEndOf="@id/logo"
            app:layout_constraintTop_toTopOf="@id/logo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hachi_maru_pop"
        android:text="@string/slogan"
        android:textColor="#4B2C2C"
        android:textSize="24sp"
        android:visibility="invisible"
        android:translationX="35dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginTop="90dp"/>
</FrameLayout>
