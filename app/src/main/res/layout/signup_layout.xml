<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE4EC"
    tools:context=".logic.activity.SignupActivity">

  <!-- Logo góc trái -->
  <ImageView
      android:id="@+id/logo"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:src="@drawable/ic_logo_icare"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_margin="16dp"/>

  <!-- Tiêu đề -->
  <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Đăng ký"
      android:textSize="28sp"
      android:fontFamily="@font/hachi_maru_pop"
      android:textColor="#4B2C2C"
      app:layout_constraintTop_toBottomOf="@id/logo"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="24dp"/>

  <!-- Ô nhập tên -->
  <EditText
      android:id="@+id/edit_text_username"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:hint="Tên của nàng"
      android:padding="12dp"
      android:background="@drawable/edittext_bg"
      android:inputType="textPersonName"
      app:layout_constraintTop_toBottomOf="@id/title"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_margin="24dp"/>

  <!-- Ô nhập email -->
  <EditText
      android:id="@+id/edit_text_email"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:hint="Email"
      android:padding="12dp"
      android:background="@drawable/edittext_bg"
      android:inputType="textEmailAddress"
      app:layout_constraintTop_toBottomOf="@id/edit_text_username"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginStart="24dp"
      android:layout_marginEnd="24dp"
      android:layout_marginTop="16dp"/>

  <!-- Ô nhập mật khẩu -->
  <EditText
      android:id="@+id/edit_text_pass"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:hint="Mật khẩu"
      android:padding="12dp"
      android:background="@drawable/edittext_bg"
      android:inputType="textPassword"
      app:layout_constraintTop_toBottomOf="@id/edit_text_email"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginStart="24dp"
      android:layout_marginEnd="24dp"
      android:layout_marginTop="16dp"/>

  <!-- Ô nhập lại mật khẩu -->
  <EditText
      android:id="@+id/edit_text_confirm_pass"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:hint="Nhập lại mật khẩu"
      android:padding="12dp"
      android:background="@drawable/edittext_bg"
      android:inputType="textPassword"
      app:layout_constraintTop_toBottomOf="@id/edit_text_pass"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginStart="24dp"
      android:layout_marginEnd="24dp"
      android:layout_marginTop="16dp"/>

  <!-- Nút đăng ký -->
  <Button
      android:id="@+id/register_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Đăng ký"
      android:textColor="@android:color/white"
      android:backgroundTint="#B95B6D"
      android:paddingLeft="32dp"
      android:paddingRight="32dp"
      android:layout_marginTop="24dp"
      app:layout_constraintTop_toBottomOf="@id/edit_text_confirm_pass"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

  <!-- Link chuyển sang đăng nhập -->
  <TextView
      android:id="@+id/login_link"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Đã có tài khoản? Đăng nhập"
      android:textColor="#E53935"
      android:textSize="14sp"
      android:layout_marginTop="16dp"
      app:layout_constraintTop_toBottomOf="@id/register_button"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

  </androidx.constraintlayout.widget.ConstraintLayout>