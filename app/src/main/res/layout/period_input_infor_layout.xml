<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE4EC"
    tools:context=".logic.activity.PeriodInputAcivity">

    <!-- Header: Logo và Menu -->
    <ImageView
        android:id="@+id/logo_period_input"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Logo"
        android:src="@drawable/ic_logo_icare"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/menu_button_period_input"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Menu"
        android:padding="8dp"
        android:src="@drawable/ic_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Nội dung cuộn -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_period_input">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="32dp">

            <!-- Tiêu đề chính -->
            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/hachi_maru_pop"
                android:text="Bắt đầu nào!"
                android:textColor="#4B2C2C"
                android:textSize="34sp" />

            <!-- Nhóm Nhập Ngày bắt đầu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical">

                <!-- Label + question mark -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hachi_maru_pop"
                        android:text="Ngày bắt đầu"
                        android:textColor="#4B2C2C"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/icon_question_start_date"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="4dp"
                        android:contentDescription="Giải thích"
                        android:src="@drawable/ic_question_mark" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/container_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_period_bg"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp">

                    <EditText
                        android:id="@+id/input_start_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/hachi_maru_pop"
                        android:gravity="center_vertical"
                        android:hint="Chọn ngày"
                        android:inputType="date"
                        android:minHeight="48dp"
                        android:paddingEnd="8dp"
                        android:textColor="#4B2C2C"
                        android:textColorHint="#994B2C2C"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/icon_calendar"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/icon_calendar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="Chọn ngày"
                        android:src="@drawable/ic_calendar_add"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <!-- Nhóm Nhập Độ dài chu kỳ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <!-- Label + question mark -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_cycle_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hachi_maru_pop"
                        android:text="Độ dài chu kỳ"
                        android:textColor="#4B2C2C"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/icon_question_cycle_length"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="4dp"
                        android:contentDescription="Giải thích"
                        android:src="@drawable/ic_question_mark" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/container_cycle_length"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_period_bg"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp">

                    <EditText
                        android:id="@+id/input_cycle_length"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/hachi_maru_pop"
                        android:hint="28"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:textColor="#4B2C2C"
                        android:textColorHint="#994B2C2C"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/unit_cycle_length"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/unit_cycle_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hachi_maru_pop"
                        android:text="ngày"
                        android:textColor="#4B2C2C"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <!-- Nhóm Nhập Số ngày hành kinh -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <!-- Label + question mark -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_period_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hachi_maru_pop"
                        android:text="Số ngày hành kinh"
                        android:textColor="#4B2C2C"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/icon_question_period_length"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="4dp"
                        android:contentDescription="Giải thích"
                        android:src="@drawable/ic_question_mark" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/container_period_length"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_period_bg"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp">

                    <EditText
                        android:id="@+id/input_period_length"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/hachi_maru_pop"
                        android:hint="5"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:textColor="#4B2C2C"
                        android:textColorHint="#994B2C2C"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/unit_period_length"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/unit_period_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hachi_maru_pop"
                        android:text="ngày"
                        android:textColor="#4B2C2C"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <!-- Nút Lưu -->
            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:backgroundTint="#C97385"
                android:fontFamily="@font/hachi_maru_pop"
                android:paddingVertical="12dp"
                android:text="Lưu"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:cornerRadius="25dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Thanh điều hướng dưới cùng -->
    <LinearLayout
        android:id="@+id/bottom_nav_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F8E0E6"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:contentDescription="Trang chủ"
            android:src="@drawable/ic_home" />

        <ImageView
            android:id="@+id/nav_stats"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:contentDescription="Thống kê"
            android:src="@drawable/ic_stats" />

        <ImageView
            android:id="@+id/nav_period"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:contentDescription="Kinh nguyệt"
            android:src="@drawable/ic_strawberry" />

        <ImageView
            android:id="@+id/nav_calendar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:contentDescription="Lịch"
            android:src="@drawable/ic_calendar" />

        <ImageView
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:contentDescription="Tài khoản"
            android:src="@drawable/ic_user" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
